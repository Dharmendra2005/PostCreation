  <body>
    <div class="min-h-screen bg-teal-700">
      <div class="min-h-screen flex items-center justify-center bg-teal-700">
        <a
          class="bg-red-500 rounded-md px-3 py-2 text-white font-semibold fixed top-4 right-4 z-50"
          href="/logout"
          >logout</a
        >
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-md px-8 py-10">
          <h2 class="text-2xl font-semibold text-center text-gray-700 mb-2">
            Hello, <%= user.name %>ğŸ‘‹
          </h2>
          <p class="text-center mb-3">here you can create your new post</p>
          <form action="/post" method="post">
            <textarea
              placeholder="What's in your Mind"
              class="mt-1 w-full border border-gray-400 rounded-md px-4 py-4 text-gray-700 focus:outline-none mb-4"
              name="postdata"
              id=""
            ></textarea>
            <input
              class="w-full py-3 rounded-md bg-teal-700 text-white font-semibold tracking-wide"
              type="submit"
              value="create your post"
            />
          </form>
        </div>
      </div>
      <a href="#posts" class="fixed bottom-13 left-1/2 -translate-x-1/2 bg-white shadow-xl rounded-full p-3 text-2xl">
  ğŸ‘‡
</a>

        <div id="posts" class="w-full px-2">
          <div
            class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3"
          ><% user.post.reverse().forEach(function(post){ %>
            <div
              class="post p-5 rounded-md border-2 border-zinc-800 bg-yellow-400"
            >
              <h4>@<%= user.username %></h4>
              <p><%= post.postdata %></p>
                <div class="flex items-center justify-between">
               <a class="text-blue-700 hover:underline">Like ğŸ‘</a>
              <a class="text-zinc-700 hover:underline">Edit</a>
            </div>
            </div>
            <%}) %>
          </div>
        </div>
      </div>
    </div>



















